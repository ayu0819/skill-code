<head>
<link href="/assets/users.css" rel="stylesheet">
</head>

<div class="main users-new">
 <section class="bg-light py-5">
  <div class="container">
    <div class="form users-form">
      <div class="form-body">
        <!-- エラーメッセージを表示するためのHTMLを貼り付けてください -->
        <% @user.errors.full_messages.each do |message| %>
          <div class="form-error">
            <%= message %>
          </div>
        <% end %>
        
        <%= form_tag("/users/create") do %>
        <h2>新規ユーザー登録</h2>
        <form>
 <div class="form-group row my-4">
 <label for="inputEmail3" class="col-sm-2 col-form-label">ユーザー名</label>
  <div class="col-sm-10">
 <input class="form-control" name="name" type="text" placeholder="User name" value="<%= @user.name %>">
</div>
</div>
 <div class="form-group row">
        <label for="inputEmail3" class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-10">
            <input name="email" type="email" class="form-control" id="inputEmail3" placeholder="Email" value="<%= @user.email %>">
        </div>
    </div>
    <div class="form-group row">
        <label for="inputPassword3" class="col-sm-2 col-form-label">Password</label>
        <div class="col-sm-10">
            <input ame="password" type="password" class="form-control" id="inputPassword3" placeholder="Password" value="<%= @user.password %>">
        </div>
    </div>
<div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">登録</button>
        </div>
    </div>

     </form>
        <% end %>
      </div>
    </div>
  </div>
  </section>
</div>