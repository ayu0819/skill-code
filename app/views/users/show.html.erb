<div class="main user-show">
<section class="bg-light py-5">
<div class="container">
    <div class="user">
      <h2><%= @user.name %></h2>
      <p><%= @user.email %></p>
      <% if @user.id == @current_user.id %>
        <%= link_to("編集", "/users/#{@user.id}/edit") %>
      <% end %>

<% @goals.each do |goal| %>
      <div>
        <%= goal.title %>
        <%= goal.description %>
      </div>
 <% end %>
       <% if @user.id == @current_user.id %>
        <%= link_to("編集", "/goal/#{@user.id}/edit") %>
      <% end %>

    </div>
  </div>
  </section>
</div>