<section class="bg-light py-5">
  <div class="container">
    <div class="form users-form">
      <div class="form-body">
        <% if @error_message %>
          <div class="form-error">
            <%= @error_message %>
          </div>
          <% end %>
            <%= form_tag("/login") do %>
              <h2>ログイン</h2>
              <form>
                <div class="form-group row my-4"> <label for="inputEmail3" class="col-sm-2 col-form-label">Email</label>
                  <div class="col-sm-10"> <input name="email" type="email" class="form-control" id="inputEmail3" placeholder="Email" value="<%= @email %>"> </div>
                </div>
                <div class="form-group row"> <label for="inputPassword3" class="col-sm-2 col-form-label">Password</label>
                  <div class="col-sm-10"> <input type="password" name="password" class="form-control" id="inputPassword3" placeholder="Password" value="<%= @password %>"> </div>
                </div>
                <div class="form-group row">
                  <div class="col-sm-10"> <button type="submit" class="btn btn-primary">ログイン</button> </div>
                </div>
              </form>
              <% end %>
      </div>
    </div>
  </div>
  </section>